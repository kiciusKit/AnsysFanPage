@if (ViewBag.ErrorTitle == null)
{
    <h3>An error occured while processing your request. The support theam is notified and we are working on the fix</h3>
    <h5>Please contact us on krystian.pawlik.1985@gmail.com</h5>
}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
    <hr />
    <a asp-action="Index" asp-controller="Home">Back to MainPage</a>
}